// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Use sqlite for simplicity, create a file named 'dev.db' in prisma folder
  // or change url to e.g. "file:../dev.db" to put it in the project root.
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plugin {
  id        String   @id @default(uuid())
  name      String
  vendor    String
  product   String? // Nullable if not always available
  version   String? // Nullable if not always available
  filePath  String   @unique // The file path should be unique for each plugin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vst_plugin") // Optional: map to a custom table name
}
