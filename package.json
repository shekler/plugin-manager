{
  "name": "plugin-manager",
  "version": "0.0.1",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:nuxt\" \"npm run dev:electron\"",
    "dev:nuxt": "nuxi dev",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:electron:dev && electron dist/electron/main.js",
    "build": "npm run build:nuxt && npm run build:electron",
    "build:nuxt": "nuxi generate",
    "build:electron": "tsc --project electron/tsconfig.json && electron-builder",
    "build:electron:dev": "tsc --project electron/tsconfig.json"
  },
  "dependencies": {
    "@nuxt/devtools": "^2.6.2",
    "@nuxt/image": "^1.10.0",
    "@nuxtjs/tailwindcss": "^7.0.0-beta.0",
    "@pinia/nuxt": "^0.11.1",
    "@prisma/client": "^6.11.1",
    "@tabler/icons-vue": "^3.34.0",
    "execa": "^9.6.0",
    "node-addon-api": "^8.4.0",
    "nuxt": "^3.17.6",
    "prisma": "^6.11.1",
    "vite": "^6.3.5",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "concurrently": "^9.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.plugin-manager.app",
    "productName": "Plugin Manager",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/electron/**/*",
      ".output/public/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
